%h1= link_to "CodeQuizzes", root_path, :class => 'brand'
%ul.nav
  %li= link_to "Recent Exams", exams_path
  %li.dropdown-navbar
    .dropdown
      %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"} Blog
      %ul.dropdown-menu{"aria-labelledby" => "dLabel", :role => "menu"}
        %li
          %a{:href => "http://codequizzes.wordpress.com/2013/10/05/dependency-injection/", :tabindex => "-1"} Dependency Injection
        %li
          %a{:href => "http://codequizzes.wordpress.com/2013/10/06/reversing-dependency-direction/", :tabindex => "-1"} Reversing Dependency Direction
        %li
          %a{:href => "http://codequizzes.wordpress.com/2013/10/06/argument-order-dependencies/", :tabindex => "-1"} Argument Order Dependencies

%ul.nav.pull-right
  %li.navigation-items{:style => "padding-top: 10px;"}
    = render 'layouts/facebook'

  %li.navigation-items{:style => "padding-top: 10px; padding-left: 8px;"}
    = render 'layouts/twitter'

  - if user_signed_in?
    %li.dropdown-navbar
      .dropdown
        %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"} #{current_user.username}
        %ul.dropdown-menu{"aria-labelledby" => "dLabel", :role => "menu"}
          %li
            = link_to('My Exams', "/user_exams")
          %li
            = link_to('Edit account', edit_user_registration_path)
          %li
            = link_to('Logout', destroy_user_session_path, :method=>'delete')
  - else
    %li
      = link_to('Login', new_user_session_path)
    %li
      = link_to('Sign up', new_user_registration_path)
