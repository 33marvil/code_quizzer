%h1= link_to "CodeQuizzes", root_path, :class => 'brand'
%ul.nav
  - if user_signed_in?
    %li
      = link_to('My Exams', "/user_exams")
  %li= link_to "Recent Exams", exams_path
  %li.dropdown-navbar
    .dropdown
      %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"} Categories
      %ul.dropdown-menu{"aria-labelledby" => "dLabel", :role => "menu"}
        %li
          %a{:href => "/programming", :tabindex => "-1"} Programming
        %li
          %a{:href => "/more_programming", :tabindex => "-1"} More Programming

%ul.nav.pull-right
  - if user_signed_in?
    %li
      = link_to('Logout', destroy_user_session_path, :method=>'delete')
  - else
    %li
      = link_to('Login', new_user_session_path)
  - if user_signed_in?
    %li
      = link_to('Edit account', edit_user_registration_path)
  - else
    %li
      = link_to('Sign up', new_user_registration_path)

  - if request.fullpath == "/"
    %li.navigation-items{:style => "padding-top: 10px;"}
      .fb-like{"data-layout" => "button_count", "data-send" => "false", "data-show-faces" => "false", "data-width" => "125"}

  %li.navigation-items{:style => "padding-top: 10px; padding-left: 8px;"}
    = render 'layouts/twitter'
  %li.navigation_items= current_user.email if user_signed_in?
