= link_to "CodeQuizzes", root_path, :class => 'brand'
%ul.nav
  %li= link_to "About", static_pages_about_path
  - if user_signed_in?
    %li
      = link_to('Logout', destroy_user_session_path, :method=>'delete')
  - else
    %li
      = link_to('Login', new_user_session_path)
  - if user_signed_in?
    %li
      = link_to('Edit account', edit_user_registration_path)
  - else
    %li
      = link_to('Sign up', new_user_registration_path)

%ul.nav.pull-right
  - if request.fullpath == "/"
    %li.navigation-items{:style => "padding-top: 10px;"}
      .fb-like{"data-layout" => "button_count", "data-send" => "false", "data-show-faces" => "false", "data-width" => "125"}
  %li.navigation_items= current_user.email if user_signed_in?
